<% if resource.errors.any? %>
  <div id = "error_explanation" >
      <div class = "alert alert-info fade in">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" onclick="$('error_explanation').hide();" > &times;</button>
           <% resource.errors.full_messages.each do |msg| %>
              <p> <%= msg %> </p>
           <%end%>
        </button>
      </div>
  </div>
<%end%>


<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <div class="well well-sm">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal'})  do |f| %>
       <fieldset>
         <legend >Sign up</legend>
            <div class="form-group">
                <%= f.label :email, class: "col-md-3 control-label"  %>
                <div class="col-sm-9">
                  <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email",maxlength: 64  %>
                </div>
            </div>

            <div class="form-group">
               <%= f.label :password , class: "col-md-3 control-label" %>
                <div class="col-sm-9">
                 <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password",maxlength: 16 %>
                </div>
            </div>

            <div class="form-group">
                <%= f.label :password_confirmation , class: "col-md-3 control-label" %><br />
                <div class="col-sm-9">
                  <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password" ,maxlength:16 %>
                </div>
            </div>

            <div class="form-group">
              <div class="col-sm-offset-3 col-sm-9 ">
                <%= f.submit "Sign up", class: 'btn btn-primary' %>
                <%= render "devise/shared/links" %>
              </div>
            </div>
        <% end %>
      </fieldset>
    </div>
  </div>
</div>