- if resource.errors.any?
  #error_explanation
    .alert.alert-info.fade.in
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :onclick => "$('error_explanation').hide();", :type => "button"} Ã—
      - resource.errors.full_messages.each do |msg|
        %p
          = msg
.row
  .col-md-6.col-md-offset-3
    .well.well-sm
      = form_for(resource, as: resource_name, url: registration_path(resource_name), :html => {:class => 'form-horizontal'})  do |f|
        %fieldset
          %legend Sign up
          .form-group
            = f.label :email, class: "col-md-3 control-label"
            .col-sm-9
              = f.email_field :email, autofocus: true, class: "form-control", placeholder: "Enter email",maxlength: 64
          .form-group
            = f.label :password , class: "col-md-3 control-label"
            .col-sm-9
              = f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Enter password",maxlength: 16
          .form-group
            = f.label :password_confirmation , class: "col-md-3 control-label"
            %br/
            .col-sm-9
              = f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirm password" ,maxlength:16
          .form-group
            .col-sm-offset-3.col-sm-9
              = f.submit "Sign up", class: 'btn btn-primary'
              = render "devise/shared/links"
