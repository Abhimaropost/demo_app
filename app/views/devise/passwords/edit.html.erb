<% if resource.errors.any? %>
  <div id = "error_explanation" >
      <div class = "alert alert-info fade in">
        <button type="button" class="close" data-dismiss="alert" aria-hidden="true" onclick="$('error_explanation').hide();" > &times;</button>
           <% resource.errors.full_messages.each do |msg| %>
              <li> <%= msg %> </li>

           <%end%>

        </button>

      </div>
  </div>
<%end%>

  <div class="row">
      <div class="col-md-6 col-md-offset-3">
        <div class="well well-sm">


<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put , :class => 'form-horizontal',id:'reset-password'}) do |f| %>
<fieldset>
  <legend >Change your password</legend>
  <%#= devise_error_messages! %>

  <%= f.hidden_field :reset_password_token %>

 <div class="form-group">
    <%= f.label :password, "New password" , class: "col-md-3 control-label"%>
  <div class="col-sm-9">
      <%= f.password_field :password, autofocus: true, autocomplete: "off"  , class: "form-control", placeholder: "Enter password",maxlength: 16%>
    </div>
  </div>

  <div class="form-group">

    <%= f.label :password_confirmation, "Confirm new password", class: "col-md-3 control-label" %>
  <div class="col-sm-9">

    <%= f.password_field :password_confirmation, autocomplete: "off" , class: "form-control", placeholder: "Confirm password" ,maxlength: 16 %>
  </div>
  </div>

 <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9 ">
    <%= f.submit "Change my password", class: "btn btn-primary" %>
  </div>
  </div>

  <div class="form-group">
      <div class="col-sm-offset-3 col-sm-9 ">
        <%= render "devise/shared/links" %>

      </div>
 </div>
   </fieldset>
<% end %>




 </div>
  </div>
  </div>