- if resource.errors.any?
  #error_explanation
    .alert.alert-info.fade.in
      %button.close{"aria-hidden" => "true", "data-dismiss" => "alert", :onclick => "$('error_explanation').hide();", :type => "button"} Ã—
      - resource.errors.full_messages.each do |msg|
        %p= msg
.row
  .col-md-6.col-md-offset-3
    .well.well-sm
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, :class => 'form-horizontal', id: 'forget-password'}) do |f|
        %fieldset
          %legend Forgot your password?
          .form-group
            = f.label :email, class: "col-md-3 control-label"
            .col-sm-9
              = f.email_field :email, autofocus: true , class: "form-control", placeholder: "Enter email" ,maxlength: 64
          .form-group
            .col-sm-offset-3.col-sm-9
              = f.submit "Send me reset password instructions", class: "btn btn-primary"
          .form-group
            .col-sm-offset-3.col-sm-9
              = render "devise/shared/links"
