<div class = "well">
  <%= form_for :image, url: images_path,  method: :post,  :html => {class: 'form-horizontal clearfix', id: "image-form", multipart: true }   do |f|  %>
    <div class="upload_sec">
      <div class="row m-b-20">
       <div class="col-sm-12">
        <div class="row">

          <div class="col-md-3 col-sm-4 col-xs-12 col-lg-3">
            <div class="form-group addupload clearfix">
                 <img id="preview-img"  width = 200 height= 150>
            </div>

            <div class="form-group clearfix hide image-title">
             <%= f.text_field :title ,maxlength:30, placeholder: 'title'%>
            </div>
          </div>

          <div class="col-md-9 col-sm-8 col-xs-12 col-lg-9 text-left">
              <h4>Upload Gallery Image</h4>
              <div class="fileUpload btn btn-primary ">
                 <%= f.file_field :photo,:class=>"upload",data: { preview_element_id: 'preview-img'}, :accept=>"Image/*" %>
              </div>
          </div>

          <div class="form-group">
            <div class="col-sm-offset-3 col-sm-9 ">
              <%= f.submit "Submit", class: 'btn btn-primary hide image-submit' %>
            </div>
          </div>

        </div>
       </div>
      </div>
    </div>

  <% end %>
</div>





