<div class="gallery_product col-lg-3 col-md-4 img-responsive" >
	<%= image_tag image.photo.url ,width:"200" ,height:"150", class: ""%>
	<div class="image-title"  data-title="<%=image.title%>" maxlength = 20 id="image_<%= image.id %>"  onclick="editable(this);"><%=image.title%></div>
</div>

<script type="text/javascript">
	function editable($this){
		$this = $($this);
		$title_text = $this.val();
		if (!($this.hasClass('title-editable'))) {
		    $this.addClass('title-editable');
			$this.attr('contenteditable', 'true');
		}
	}
</script>


